<div class = "container">
  <div class = "wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <p><%= notice %></p>
    <h1>投稿一覧</h1>
     <%= link_to "投稿する", new_post_path, class: 'btn btn-default' %>
    <% @post.each do |post| %>
    <div class = "row">
      <p><%= image_tag(post.photo) %></p>
      <p>
        <%= profile_img(post.user) %>
        <%= post.user.name %>
      </p>
      <p><%= post.title %></p>
      <p><%= post.content %></p>
      <%= link_to "編集する", edit_post_path(post.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除する", post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
