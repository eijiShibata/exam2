<%= form_for(@post) do |f| %>
 <%= f.error_messages! %>

 <%= image_tag(@post.photo) if @post.photo? %>
 <%= f.label :photo %>
 <%= f.file_field :photo %>
 <%= f.hidden_field :photo_cache %>
 <br>
 <%= f.label :title %>
 <%= f.text_field :title, class: 'form-control' %>
 <br>
 <%= f.label :content %>
 <%= f.text_field :content, class: 'form-control' %>
 <br>
 <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "投稿一覧にもどる", posts_path %>
