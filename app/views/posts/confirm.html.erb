<div class = "container">
  <div class = "col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、投稿する。</h3>
    <%= form_for(@post) do |f| %>
     <%= f.hidden_field :photo %>
     <%= f.hidden_field :photo_cache %>
     <%= f.hidden_field :title %>
     <%= f.hidden_field :content %>
     <p><%= image_tag(@post.photo) %></p>
     <p>タイトル:<%= @post.title %></p>
     <p>本文:<%= @post.content %></p>
     <%= f.submit "投稿", class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@post, url: new_post_path, method: 'get') do |f| %>
     <%= f.hidden_field :photo %>
     <%= f.hidden_field :title %>
     <%= f.hidden_field :content %>
     <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
